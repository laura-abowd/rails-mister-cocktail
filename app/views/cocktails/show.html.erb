<h1>New Cocktails!</h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<%= @cocktail.name %>

<div class="container">
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %> of <%= dose.ingredient["name"]%>
    <p><%= link_to 'Delete Ingredients', dose_path(dose), method: :delete %></p>
    <%end%>
</div>

<p><%= link_to 'Back Home', cocktails_path %></p>
<p><%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail)  %></p>
